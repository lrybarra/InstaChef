<div class="search col-xs-12">
  <%= form_tag recipes_search_path, class: "form-inline", method: :get do %>
    <%= text_field_tag :query, params[:query], placeholder: 'Find a recipe...', class: 'form-control'%>
  <% end %>
</div>


<div class="common-terms">
  <div class='col-xs-3 btn-default btn-lg'>
  <% @procedures.each do |p| %>
    <%= link_to p.term, procedure_path %>
  <% end %>
  </div>
</div>